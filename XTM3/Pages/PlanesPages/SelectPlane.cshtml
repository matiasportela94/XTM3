@page
@model XTM3.Pages.PlanesPages.SelectPlaneModel
@{
    ViewData["Title"] = "XTM - Choose your Plane!";
}

<head>
    <link rel="stylesheet" href="~/css/Aviones.css" />
</head>
<body style="margin-bottom: 60px;">
    <div>
        <h3 style="color:white">Select your plane!</h3>
        <h5 style="color:white">These are the available planes for the requested date:</h5>
    </div>

    <div class="container h-100">

        <div class="container w-100" style="display:grid; grid-gap:10px;grid-template-columns: 1fr 1fr;grid-template-rows:auto">


            @foreach (var plane in Model.Planes)
            {
                <form method="post">
                    <div class="container">
                        <div class="row">

                            <div class="col zone">

                                <div class="row justify-content-center align-content-center" style="padding:10px">
                                    @if (plane.PlaneType.Equals("Gold"))
                                    {
                                        <i class="fas fa-plane" style="color: gold;font-size: 40px;margin-top: 10px;"></i>
                                    }
                                    @if (plane.PlaneType.Equals("Silver"))
                                    {
                                        <i class="fas fa-plane" style="color: silver;font-size: 40px;margin-top: 10px;"></i>
                                    }
                                    @if (plane.PlaneType.Equals("Bronze"))
                                    {
                                        <i class="fas fa-plane" style="color: saddlebrown;font-size: 40px;margin-top: 10px;"></i>
                                    }
                                </div>
                                <div class="row justify-content-center">
                                    <h6>Plane ID: @plane.PlaneID</h6>
                                </div>
                                <div class="row justify-content-center">
                                    <h6>Plane Name: @plane.PlaneName</h6>
                                </div>
                                <div class="row justify-content-center">
                                    <h6>Capacity: @plane.PassengerCapacity</h6>
                                </div>
                                <div class="row justify-content-center">
                                    <h6>Maximum Velocity: @plane.MaxVelocity</h6>
                                </div>
                                @if (@plane.Catering == true)
                                {
                                    <div class="row justify-content-center">
                                        <h6>Catering  <i class="fas fa-check"></i></h6>
                                    </div>

                                }
                                @if (@plane.Catering == false)
                                {
                                    <div class="row justify-content-center">
                                        <h6>Catering  <i class="far fa-times-circle"></i></h6>
                                    </div>
                                }
                                @if (@plane.Wifi == true)
                                {
                                    <div class="row justify-content-center">
                                        <h6>Wi-Fi  <i class="fas fa-check"></i></h6>
                                    </div>
                                }
                                @if (@plane.Wifi == false)
                                {
                                    <div class="row justify-content-center">
                                        <h6>Wi-Fi  <i class="far fa-times-circle"></i></h6>
                                    </div>
                                }
                                <div class="form-group row justify-content-center"><input type="radio" asp-for="@Model.SelectedPlaneID" value="@plane.PlaneID" style="margin-top:6px;" /></div>
                                <div class="form-group row justify-content-center"><input type="submit" role="button" value="Reserve Plane" class="btn btn-light border-0" /></div>


                            </div>

                        </div>

                    </div>

                </form>
            }

        </div>


    </div>
</body>

