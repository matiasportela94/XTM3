@page
@model XTM3.Pages.PlanesPages.OurPlanesModel
@{
    ViewData["Title"] = "XTM - Our Planes";
}

<head>
    <link rel="stylesheet" href="~/css/Aviones.css" />
</head>
<body style="margin-bottom: 60px;">
    <div>
        <h3 style="color:white">Greetings terricola!</h3>
        <h5 style="color:white">These are our planes:</h5>
    </div>

    <div class="container h-100">

        <br />

        <form method="get">
            <div class="form-group">
                <div class="input-group">
                    <input type="search" class="form-control" asp-for="SearchTerm" placeholder="Ingresa Nombre o ID para buscar aviones especificos." />
                </div>
            </div>
        </form>


        <br />

        <div class="container h-100">
            <div class="container bigContainer">


                @foreach (var plane in Model.Planes)
                {
                    <div class="container zone">
                        <div class="row">

                            <div class="col zone">

                                <div class="row justify-content-center align-content-center" style="padding:10px;">
                                    @if (plane.PlaneType.Equals("Gold"))
                                    {
                                        <i class="fas fa-plane" style="color: gold;font-size: 40px;margin-top: 5px;"></i>
                                    }
                                    @if (plane.PlaneType.Equals("Silver"))
                                    {
                                        <i class="fas fa-plane" style="color: silver;font-size: 40px;margin-top: 5px;"></i>
                                    }
                                    @if (plane.PlaneType.Equals("Bronze"))
                                    {
                                        <i class="fas fa-plane" style="color: saddlebrown;font-size: 40px;margin-top: 5px;"></i>
                                    }
                                </div>
                                <div class="row justify-content-center">
                                    <h6>Plane Name: @plane.PlaneName</h6>
                                </div>
                                <div class="row justify-content-center">
                                    <h6>Plane ID: @plane.PlaneID</h6>
                                </div>
                                <div class="row justify-content-center">
                                    <h6>Capacity: @plane.PassengerCapacity</h6>
                                </div>
                                <div class="row justify-content-center">
                                    <h6>Maximum Velocity: @plane.MaxVelocity</h6>
                                </div>
                                @if (@plane.Catering == true)
                                {
                                    <div class="row justify-content-center">
                                        <h6>Catering  <i class="fas fa-check"></i></h6>
                                    </div>

                                }
                                @if (@plane.Catering == false)
                                {
                                    <div class="row justify-content-center">
                                        <h6>Catering  <i class="far fa-times-circle"></i></h6>
                                    </div>
                                }
                                @if (@plane.Wifi == true)
                                {
                                    <div class="row justify-content-center" style="margin-bottom:5px;">
                                        <h6>Wi-Fi  <i class="fas fa-check"></i></h6>
                                    </div>
                                }
                                @if (@plane.Wifi == false)
                                {
                                    <div class="row justify-content-center" style="margin-bottom:5px;">
                                        <h6>Wi-Fi  <i class="far fa-times-circle"></i></h6>
                                    </div>
                                }


                            </div>

                        </div>

                    </div>
                }

            </div>

        </div>
    </div>

</body>
