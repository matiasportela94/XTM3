@page
@model XTM3.Pages.ClientPages.DeleteClientModel
@{
    ViewData["Title"] = "XTM - Delete Client";
}

<head>
    <link rel="stylesheet" href="~/css/Aviones.css" />
</head>
<body style="margin-bottom: 60px;">
    <div>
        <h3 style="color:white">Hey!</h3>
        <h5 style="color:white">Select the Client you want to delete</h5>
    </div>

    <div class="container h-100">

        <div class="container bigContainer">


            @foreach (var client in Model.Clients)
            {
                <form method="post">
                    <div class="container zone">
                        <div class="row">

                            <div class="col zone">

                                <div class="row justify-content-center align-content-center" style="font-size: 40px;margin: 10px;">
                                    <i class="fas fa-user"></i>
                                </div>
                                <div class="row justify-content-center">
                                    <h6>Client ID: @client.UserID</h6>
                                </div>
                                <div class="row justify-content-center">
                                    <h6>Last Name: @client.LastName</h6>
                                </div>
                                <div class="row justify-content-center">
                                    <h6>Name: @client.FirstName</h6>
                                </div>
                                <div class="row justify-content-center">
                                    <h6>Age: @client.Age</h6>
                                </div>
                                <div class="row justify-content-center">
                                    <h6>Location: @client.Location</h6>
                                </div>
                          
                                <div class="form-group row justify-content-center"><input type="radio" asp-for="@Model.SelectedClientID" value="@client.UserID" style="margin-top:6px;" /></div>
                                <div class="form-group row justify-content-center"><input type="submit" role="button" value="Delete Client" class="btn btn-light border-0" /></div>


                            </div>

                        </div>

                    </div>

                </form>
            }

        </div>


    </div>
</body>
