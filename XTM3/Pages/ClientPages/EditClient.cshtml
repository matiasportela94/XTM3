@page
@model XTM3.Pages.ClientPages.EditClientModel
@{
    ViewData["Title"] = "XTM - Edit Client";
}

<head>
    <link rel="stylesheet" href="~/css/Aviones.css" />
</head>

<body>
    <div>
        <h3 style="color:white">Greetings terricola!</h3>
        <h4 style="color:white">Update your information.</h4>
    </div>

    <div class="container h-100">
        <form method="post">

            <div asp-validation-summary="All">

                <div class="form-group">
                    <label asp-for="@Model.NewClient.UserID" class="control-label">Enter your ID:</label>
                    <input asp-for="@Model.NewClient.UserID" placeholder="First Name" class="form-control" />
                    <span class="text-danger" asp-validation-for="@Model.NewClient.UserID"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.NewClient.FirstName" class="control-label">Enter First Name:</label>
                    <input asp-for="@Model.NewClient.FirstName" placeholder="First Name" class="form-control" />
                    <span class="text-danger" asp-validation-for="@Model.NewClient.FirstName"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.NewClient.LastName" class="control-label">Enter First Name:</label>
                    <input asp-for="@Model.NewClient.LastName" placeholder="First Name" class="form-control" />
                    <span class="text-danger" asp-validation-for="@Model.NewClient.LastName"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.NewClient.Age" class="control-label">Age:</label>
                    <input asp-for="@Model.NewClient.Age" placeholder="Age" class="form-control" min="18" pattern="^[0-9]+" />
                    <span class="text-danger" asp-validation-for="@Model.NewClient.Age"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.NewClient.Location" class="control-label">Location:</label>
                    <input asp-for="@Model.NewClient.Location" class="form-control" placeholder="City" />
                    <span class="text-danger" asp-validation-for="@Model.NewClient.Location"></span>
                </div>

            </div>


            <div class="form-group">
                <input type="submit" role="button" value="Confirm" asp-for="@Model.Submit" class="btn btn-primary" />
                <input type="submit" role="button" value="Cancel" asp-for="@Model.Cancel" class="btn btn-primary" /> <!--CANCEL BUTTON, elimina la reserva hecha-->
            </div>



        </form>

    </div>
</body>
